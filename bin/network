#!/bin/bash
USER=whoami | awk '{print $1}'

if [ $USER = "root" ]; then
    echo "NÃ£o utilize sudo";
    exit
fi

bin/dev stop
sudo pkill docker
sudo iptables -t nat -F
sudo ifconfig docker0 down
sudo brctl delbr docker0
sudo service docker restart
sudo chmod 777 -R /var/run/docker.sock;
bin/dev start