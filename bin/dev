#!/bin/bash

ARG=$1

export USERID=${UID}
export GROUPID=${GID}

if ! test $ARG; then
   docker-compose stop; docker-compose up -d; docker-compose ps;
   exit
fi


if [ $ARG = "start" ]; then
    docker-compose up -d; docker-compose ps;
    exit;
fi

if [ $ARG = "stop" ]; then
    docker-compose stop;
    exit;
fi

if [ $ARG = "restart" ]; then
    docker-compose stop; docker-compose up -d; docker-compose ps;
    exit;
fi

if [ $ARG = "status" ]; then
    docker-compose ps;
    exit;
fi

if [ $ARG = "build" ]; then
    bin/dev stop; docker-compose build;
    bin/dev start;
    exit;
fi
