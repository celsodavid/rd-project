#!/bin/bash
USER=whoami | awk '{print $1}'

if [ $USER = "root" ]; then
    echo "NÃ£o utilize sudo";
    exit
fi

ARG=$1

export USERID=${UID}
export GROUPID=${GID}

if ! test $ARG; then
   echo "Informe o modulo"
   exit
fi
echo "PHP CS"
bin/phpcs $1
echo "PHP MD"
bin/phpmd $1
echo "PHP Stan"
bin/phpstan $1
echo "PHP Unit"
bin/phpunit $1