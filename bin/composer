#!/bin/bash
USER=whoami | awk '{print $1}'

if [ $USER = "root" ]; then
    echo "Não utilize sudo";
    exit
fi


export USERID=${UID}
export GROUPID=${GID}

ARG1=$1
ARG2=$2

if ! test $ARG1; then
  echo "O que você deseja fazer com o composer?"
  exit
fi

docker-compose exec php bash -c "composer $ARG1 $ARG2"