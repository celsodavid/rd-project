#!/bin/bash
USER=whoami | awk '{print $1}'

if [ $USER = "root" ]; then
    echo "NÃ£o utilize sudo";
    exit
fi

ARG=$1

export USERID=${UID}
export GROUPID=${GID}

if ! test $ARG; then
   echo "Informe o modulo"
   exit
fi

docker-compose exec php m2/vendor/bin/phpmd m2/vendor/raiadrogasil/$1 text m2/vendor/raiadrogasil/$1/phpmd-ruleset.xml